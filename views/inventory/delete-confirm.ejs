<main class="inventory-form-container">
  <%- messages() %>

  <h1><%= title %></h1>

  <form action="/inv/delete" method="post" id="deleteForm" class="delete-inventory-form">

    <label for="inv_make">Make</label>
    <input type="text" id="invMake" name="inv_make" required pattern="[A-Za-z0-9 ]{1,30}"
      value="<%= typeof inv_make != 'undefined' ? inv_make : '' %>" readonly />

    <label for="inv_model">Model</label>
    <input type="text" id="invModel" name="inv_model" required pattern="[A-Za-z0-9 ]{1,30}"
      value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>" readonly />

    <label for="inv_year">Year</label>
    <input type="number" id="invYear" name="inv_year" min="1900" max="2099" required
      value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>" readonly />

    <label for="inv_price">Price</label>
    <input type="number" id="invPrice" name="inv_price" step="0.01" min="0" required
      value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>" readonly />

    <p>Confirm Deletion - The delete is permanent.</p>
    <button type="submit">Delete</button>
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

  </form>

  <!-- Server-side validation error display -->
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</main>