<%- messages() %>

<h1>Add New Classification</h1>
<p>Please enter a classification name (letters only, no spaces or special characters).</p>

<form action="/inv/add-classification" method="POST" class="add-classification-form">
  <label for="classification_name">Classification Name:</label>
  <input type="text" id="classification_name" name="classification_name" required
    pattern="^[A-Za-z]+$"
    title="Only letters allowed. No spaces, numbers, or special characters." />

  <button type="submit">Add Classification</button>
</form>