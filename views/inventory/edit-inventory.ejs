<main class="inventory-form-container">
  <%- messages() %>

  <h1><%= title %></h1>

  <form action="/inv/update" method="post" id="updateForm" class="edit-inventory-form">
    
    <!-- Classification dropdown -->
    <label for="classificationList">Classification</label>
    <%- classificationList %>

    <label for="inv_make">Make</label>
    <input type="text" id="invMake" name="inv_make" required pattern="[A-Za-z0-9 ]{1,30}"
      value="<%= typeof inv_make != 'undefined' ? inv_make : '' %>" />

    <label for="inv_model">Model</label>
    <input type="text" id="invModel" name="inv_model" required pattern="[A-Za-z0-9 ]{1,30}"
      value="<%= typeof inv_model != 'undefined' ? inv_model : '' %>" />

    <label for="inv_year">Year</label>
    <input type="number" id="invYear" name="inv_year" min="1900" max="2099" required
      value="<%= typeof inv_year != 'undefined' ? inv_year : '' %>" />

    <label for="inv_description">Description</label>
    <textarea id="invDescription" name="inv_description" required><%= typeof inv_description != 'undefined' ? inv_description : '' %></textarea>

    <label for="inv_image">Image Path</label>
    <input type="text" id="invImage" name="inv_image" required
      value="<%- typeof inv_image != 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>" />

    <label for="inv_thumbnail">Thumbnail Path</label>
    <input type="text" id="invThumbnail" name="inv_thumbnail" required
      value="<%- typeof inv_thumbnail != 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" />

    <label for="inv_price">Price</label>
    <input type="number" id="invPrice" name="inv_price" step="0.01" min="0" required
      value="<%= typeof inv_price != 'undefined' ? inv_price : '' %>" />

    <label for="inv_miles">Miles</label>
    <input type="number" id="invMiles" name="inv_miles" min="0" required
      value="<%= typeof inv_miles != 'undefined' ? inv_miles : '' %>" />

    <label for="inv_color">Color</label>
    <input type="text" id="invColor" name="inv_color" required pattern="[A-Za-z ]{1,20}"
      value="<%= typeof inv_color != 'undefined' ? inv_color : '' %>" />

    <button type="submit" disabled>Update Vehicle</button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>

  <!-- Server-side validation error display -->
  <% if (errors) { %>
    <ul class="notice">
      <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
  <% } %>
</main>

<script src="../../js/inv-update.js"></script>
