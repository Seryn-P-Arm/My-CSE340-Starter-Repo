<main class="form-container">
    <div class="flash-message"><%- messages() %></div>

    <h1><%= title %></h1>

    <form id="loginForm" action="/account/login" method="POST">
        <label for="email">Email address</label>
        <input type="email" id="email" name="email" required placeholder="you@example.com" />

        <label for="password">Password</label>
        <input type="password" id="password" name="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required placeholder="Enter your password" />

        <div>
            <p class="password-requirements">
                Password must be at least 12 characters long, contain at least one capital letter, one number, and one special character.
            </p>
        </div>

        <button type="submit">Login</button>
    </form>

    <p>Don't have an account? <a href="/account/register">Register here</a></p>
    <script src="/js/script.js"></script>
</main>
