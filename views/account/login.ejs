<main class="form-container">
    <div class="flash-message"><%- messages() %></div>

    <h1><%= title %></h1>

    <form id="loginForm" action="/account/login" method="POST">
        <label for="account_email">Email</label>
        <input type="email" id="email" name="account_email" required
                value="<%= typeof account_email != 'undefined' ? account_email : '' %>" />

        <label for="account_password">Password</label>
        <div class="password-wrapper">
            <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required />
            <span id="pswdBtn">Show Password</span>
        </div>

        <div>
            <p class="password-requirements">
                Password must be at least 12 characters long, contain at least one capital letter, one number, and one special character.
            </p>
        </div>

        <button type="submit">Login</button>
    </form>

    <p>Don't have an account? <a href="/account/register">Register here</a></p>
    <script src="/js/script.js"></script>
</main>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
